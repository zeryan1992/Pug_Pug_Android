<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/glob_card"
    android:layout_marginBottom="8dp"
    android:padding="16dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@color/cardview_light_background">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:textSize="12sp"
            android:id="@+id/glob_location"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/new_size_location"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glob_mainPost"
            android:textSize="16sp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_weight="0.80"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/glob_relativeCardItem"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/glob_heart"
                android:src="@drawable/gray_up_vote_new"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:text="0"
                android:id="@+id/glob_likes"
                android:layout_gravity="center"
                android:textColor="@color/mainTextBrightBlue"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/glob_disheart"
                android:src="@drawable/gray_down_vote_new"/>

        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/img_post"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:background="@drawable/test"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12"
            android:layout_gravity="left"
            android:id="@+id/glob_date"
            android:textStyle="bold"
            android:textColor="@color/mainTextBrightBlue"
            android:paddingLeft="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_gravity="left"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginRight="2dp"
                android:id="@+id/glob_count" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sms_selected"
                android:id="@+id/glob_reply_count" />

        </LinearLayout>


    </FrameLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>