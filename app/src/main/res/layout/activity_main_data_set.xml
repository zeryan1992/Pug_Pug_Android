<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.pug.pug.activities.ActivityMainDataSet"
    android:id="@+id/replace"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/cardview_light_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <com.app.pug.pug.utils.PagerSlidingTabStrip
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/tabs"
                    app:pstsTabSwitch="true"
                    app:pstsIndicatorHeight="2dp"
                    app:pstsUnderlineHeight="0dp"
                    app:pstsTabPaddingLeftRight="15dp"
                    app:pstsIndicatorColor="@color/cardview_light_background"
                    app:pstsDividerColor="@color/transparent"
                    />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:src="@drawable/camf"
                        android:paddingLeft="130dp"
                        android:id="@+id/camera"
                        android:visibility="visible"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewpager"
                />
        </LinearLayout>




</FrameLayout>
