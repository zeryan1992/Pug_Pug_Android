<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/individual_reply_main_card"
    android:padding="16dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="0.5dp"
    android:layout_marginBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|center"
                android:id="@+id/pro_pic"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2h"
                android:id="@+id/date"
                android:layout_gravity="center|bottom"
                android:paddingTop="20dp"
                android:textColor="@color/dirtyWhite"
                />

        </LinearLayout>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/individual_reply_main_text"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_gravity="center_vertical"
            android:text="sklsadjklsajkdsa"
            android:layout_weight="0.95" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/individual_reply_votes_container"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="New Button"
                android:id="@+id/individual_reply_up"
                android:layout_marginBottom="1dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:text="0"
                android:id="@+id/individual_reply_likes"
                android:layout_gravity="center"
                android:typeface="monospace"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/mainTextBrightBlue"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="New Button"
                android:id="@+id/individual_reply_down"
                android:layout_marginTop="1dp" />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>